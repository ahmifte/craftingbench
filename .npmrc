# Hoist Material UI and related packages to root
public-hoist-pattern[]=*@mui/*
public-hoist-pattern[]=*@emotion/*

# Essential types for TypeScript
public-hoist-pattern[]=*types*
public-hoist-pattern[]=*@types/*

# Development tools
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*
public-hoist-pattern[]=*typescript*
public-hoist-pattern[]=*@typescript-eslint/*
public-hoist-pattern[]=*@eslint/*

# Enable strict dependencies
shamefully-hoist=false

# When using monorepos or workspaces
link-workspace-packages=true
shared-workspace-lockfile=true

# Performance optimizations
node-linker=hoisted
prefer-frozen-lockfile=true
